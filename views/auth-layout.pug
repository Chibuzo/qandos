doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='description' content='')
    title #{_app_name} Qandos Sign up Options
    // Bootstrap core CSS
    link(href='/css/style.min.css' rel='stylesheet')
    meta(name='theme-color' content='#7952b3')
    style.
        html,
        body {
            height: 100%;
        }

        body {
            display: flex;
            align-items: center;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            width: 100%;
            max-width: 400px;
            padding: 15px;
            margin: auto;
        }

        .pane {
            border: 2px solid #666;
            padding: 15px;
            border-radius: 10px;
            font-size: 20px
        }

        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }

main.form-signin.text-center
    img(src='/img/logo.png' width='180' alt='')

    block content


block scriptBlock