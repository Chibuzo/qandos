extends ../dashboard-layout

block content
    .card.bg-light-info.shadow-none.position-relative.overflow-hidden
        .card-body.px-4.py-3
            .row.align-items-center
                .col-9
                    h4.fw-semibold.mb-8 Properties For Vetting
                    nav(aria-label='breadcrumb')
                        ol.breadcrumb
                            li.breadcrumb-item
                                a.text-muted(href='#') Home
                            li.breadcrumb-item(aria-current='page') Property Requests
                .col-3
                    .text-center.mb-n5
                        img.img-fluid.mb-n4(src='../../dist/images/breadcrumb/ChatBc.png' alt='')
    .card.w-100.position-relative.overflow-hidden
        .px-4.py-3.border-bottom
            .card-subtitle Property Requests
        .card-body.p-4
            .table-responsive.rounded-2.mb-4
                table.table
                    thead
                        tr
                            th Date
                            th Property Type
                            th Location
                            th Name
                            th Email
                            th Phone  
                            th Status

                    tbody
                        each property in properties 
                            tr
                                td= view.formatDate(property.createdAt)
                                td= property.propertyType  
                                td #{property.state}, #{property.city}
                                td= property.name
                                td= property.email
                                td= property.phone 
                                td= property.status

