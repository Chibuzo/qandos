extends layout 

block content
    .card.bg-light-info.shadow-none.position-relative.overflow-hidden
        .card-body.px-4.py-3
            .row.align-items-center
                .col-9
                    h4.fw-semibold.mb-8 Transactions
                    nav(aria-label='breadcrumb')
                        ol.breadcrumb
                            li.breadcrumb-item
                                a.text-muted(href='index.html') Home
                            li.breadcrumb-item(aria-current='page') Transactions
                .col-3
                    .text-center.mb-n5
                        img.img-fluid.mb-n4(src='../../dist/images/breadcrumb/ChatBc.png' alt='')
    .card.w-100.position-relative.overflow-hidden
        .px-4.py-3.border-bottom
            .card-title.fw-semibold.mb-0.lh-sm Transactions
        .card-body.p-4
            .table-responsive.rounded-2.mb-4
                table.table
                    thead
                        tr
                            th Date
                            th Property
                            th Location
                            th Cost
                            th Buyer 
                            th Earning

                    tbody
                        each trnx in transactions 
                            tr
                                td= view.formatDate(trnx.createdAt)
                                td= trnx.Property.title  
                                td #{trnx.Property.state}, #{trnx.Property.city}
                                td= '₦' + view.formatCurrency(trnx.cost) 
                                td= trnx.User.fullname 
                                td= '₦' + view.formatCurrency(0.05 * trnx.cost)
                                

