doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='description' content='')
    title #{_app_name} Qandos Sign up Options
    // Bootstrap core CSS
    link(href='/css/style.min.css' rel='stylesheet')
    meta(name='theme-color' content='#7952b3')
    style.
        html,
        body {
            height: 100%;
        }

        body {
            display: flex;
            align-items: center;
            padding-top: 4px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            width: 100%;
            max-width: 400px;
            padding: 15px;
            margin: auto;
        }

        .pane {
            border: 2px solid #666;
            padding: 15px;
            border-radius: 10px;
            font-size: 20px
        }

        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }

main.form-signin.text-center
    a(href='/')
        img(src='/img/logo.png' width='140' alt='').mb-5

    if newUser 

        .alert.alert-success.text-center.mt-4
            i.fa.fa-check-circle.fa-4x
            p Thank you for signing up with Qandos. 
                br/ A mail has been sent to you to verify your email address 

        a.text-primary.fw-medium.ms-2(href='/login') Click here to Login

    else    

        h4.mb-4 Sign up as:

        .d-grid.gap-3
            a.btn.btn-lg.btn-primary.btn-block(href="/buyer-signup") BUYER

            a.btn.btn-lg.btn-primary.btn-block(href="/partner-signup") PARTNER



